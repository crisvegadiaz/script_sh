#!/bin/bash
# Colocar en: /usr/bin
source textoColor.sh

# Verificar si el script se ejecuta con privilegios de superusuario
if [[ $EUID -ne 0 ]]; then
   echo "Este script debe ejecutarse con privilegios de superusuario (sudo)." 
   exit 1
fi

# Banner de bienvenida
texColor "========== ğŸ› ï¸ Formatear USB ==========" blue
printf "\n\n"

# Mostrar informaciÃ³n de dispositivos de almacenamiento
texColor "Ver ruta del pendrive" yellow
texColor "[Presiona ENTER para continuar]" green
read -r enterKey
sudo lsblk | grep sd
texColor 'â–„â–„â–„â–„â–„â–„â–„â–„â–„â–„â–„â–„â–„â–„â–„â–„â–„â–„â–„â–„â–„â–„â–„â–„â–„â–„â–„â–„â–„â–„â–„â–„â–„â–„â–„â–„â–„â–„â–„â–„' green
printf "\n\n"

# Solicitar la ruta del dispositivo a desmontar
texColor "Escribe la ruta del pendrive para desmontar (ej. sdb1): " yellow
read -r ruta

# Validar que la ruta no estÃ© vacÃ­a y exista
if [[ -z "$ruta" || ! -e "/dev/$ruta" ]]; then
    texColor "âŒ Ruta no vÃ¡lida o el dispositivo no existe." red
    exit 1
fi

# Desmontar el dispositivo
sudo umount "/dev/$ruta"
if [[ $? -ne 0 ]]; then
    texColor "âŒ Error al desmontar el dispositivo." red
    exit 1
fi

# Solicitar el nombre del USB
texColor "Escribe el nombre del USB: " yellow
read -r nombre

# SelecciÃ³n del formato
texColor "Selecciona el formato (1)NTFS (2)FAT32: " yellow
read -r opcion

case $opcion in
    1)
        sudo mkfs.ntfs -f -L "$nombre" "/dev/$ruta"
        if [[ $? -eq 0 ]]; then
            texColor "âœ… Formateo a NTFS completado." green
        else
            texColor "âŒ Error al formatear a NTFS." red
            exit 1
        fi
        ;;
    2)
        sudo mkfs.vfat -F 32 -n "$nombre" "/dev/$ruta"
        if [[ $? -eq 0 ]]; then
            texColor "âœ… Formateo a FAT32 completado." green
        else
            texColor "âŒ Error al formatear a FAT32." red
            exit 1
        fi
        ;;
    *)
        texColor "âŒ OpciÃ³n no vÃ¡lida." red
        exit 1
        ;;
esac

printf "\n\n"
texColor 'â–„â–„â–„â–„â–„â–„â–„â–„â–„â–„â–„â–„â–„â–„â–„â–„â–„â–„â–„â–„â–„â–„â–„â–„â–„â–„â–„â–„â–„â–„â–„â–„â–„â–„â–„â–„â–„â–„â–„â–„' green
