#! /bin/sh
#Colocar en: /usr/bin

#Color texto
function texColor(){
    
    mensaje="$1"
    tipo="$2"
    
    arry1=(31 32 33 34 35)
    arry2=('red' 'green' 'yellow' 'blue' 'purple')
    
    for (( c=0; c<=${#arry2[@]}; c++ ))
    do
        if [[ $tipo == ${arry2[c]} ]]; then
            echo -e "\e[${arry1[c]}m${mensaje}\e[0m"
        fi
    done
}

# actualizaciones
clear
texColor '+-------------------------------------+' green
texColor '|     𝙇𝙄𝙎𝙏𝘼 𝘿𝙀 𝘼𝘾𝙏𝙐𝘼𝙇𝙄𝙕𝘼𝘾𝙄𝙊𝙉𝙀𝙎 𝘿𝙉𝙁    |' green
texColor '+-------------------------------------+' green
printf "\n"
dnf update $1
texColor '▄▄ ▄▄ ▄▄ ▄▄ ▄▄ ▄▄ ▄▄ ▄▄ ▄▄ ▄▄ ▄▄ ▄▄ ▄▄ ▄▄ ▄▄ ▄▄ ▄▄ ▄▄ ▄▄ ▄▄ ▄▄ ▄▄ ▄▄ ▄▄ ▄▄ ▄▄ ▄▄ ▄▄ ' green
printf "\n"

texColor '+-------------------------------------+' blue
texColor '|  𝙇𝙄𝙎𝙏𝘼 𝘿𝙀 𝘼𝘾𝙏𝙐𝘼𝙇𝙄𝙕𝘼𝘾𝙄𝙊𝙉𝙀𝙎 𝙁𝙇𝘼𝙏𝙋𝘼𝙆   |' blue
texColor '+-------------------------------------+' blue
printf "\n"
flatpak update $1
texColor '▄▄ ▄▄ ▄▄ ▄▄ ▄▄ ▄▄ ▄▄ ▄▄ ▄▄ ▄▄ ▄▄ ▄▄ ▄▄ ▄▄ ▄▄ ▄▄ ▄▄ ▄▄ ▄▄ ▄▄ ▄▄ ▄▄ ▄▄ ▄▄ ▄▄ ▄▄ ▄▄ ▄▄ ' blue
printf "\n"

texColor '+-------------------------------------+' red
texColor '|     𝙇𝙄𝙎𝙏𝘼 𝘿𝙀 𝘼𝘾𝙏𝙐𝘼𝙇𝙄𝙕𝘼𝘾𝙄𝙊𝙉𝙀𝙎 𝙎𝙉𝘼𝙋   |' red
texColor '+-------------------------------------+' red
printf "\n"
snap refresh
texColor '▄▄ ▄▄ ▄▄ ▄▄ ▄▄ ▄▄ ▄▄ ▄▄ ▄▄ ▄▄ ▄▄ ▄▄ ▄▄ ▄▄ ▄▄ ▄▄ ▄▄ ▄▄ ▄▄ ▄▄ ▄▄ ▄▄ ▄▄ ▄▄ ▄▄ ▄▄ ▄▄ ▄▄ ' red
printf "\n"
